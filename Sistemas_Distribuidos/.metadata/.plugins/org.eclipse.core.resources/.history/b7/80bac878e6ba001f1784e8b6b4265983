package es.uned.servidor;

import java.io.File;
import java.rmi.RemoteException;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.Random;

import es.uned.repositorio.*;

public class ServicioDatosImpl implements ServicioDatosInterface {
	
	private Map<Integer, String> sesion_nombre = new HashMap<>();
	private Map<String, Integer> nombre_sesion = new HashMap<>();
	private Map<String, String> nombre_contraseña = new HashMap<>();
	private Map<Integer, ServicioSrOperadorInterface> repositorios = new HashMap<>();
	private Map<Integer, List<String>> repositorio_clientes = new HashMap<>();
	private Map<Integer, List<String>> cliente_ficheros = new HashMap<>();
	private Map<String, Integer> ficheros_descargas = new HashMap<>();
	private Map<Integer, List<Integer>> contactos = new HashMap<>();
	
	public ServicioDatosImpl() {
		sesion_nombre = new HashMap<>();
        nombre_sesion = new HashMap<>();
        nombre_contraseña = new HashMap<>();
        repositorios = new HashMap<>();
        repositorio_clientes = new HashMap<>();
        cliente_ficheros = new HashMap<>();
        ficheros_descargas = new HashMap<>();
        contactos = new HashMap<>();
	}
	
	
//////////////////////////////////////////////////////////////////////////////////////////////////
